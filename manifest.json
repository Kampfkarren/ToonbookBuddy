{
	"manifest_version": 2,
	
	"name": "Toonbook Buddy",
	"description": "A helpful Chrome extension for Toonbook users.",
	"version": "1.4.4",
	
	"browser_action": {
		"default_icon": {
			"48": "icon.png"
		},
		
		"default_title": "Toonbook Buddy",
		"default_popup": "popup.html"
	},
	
	"content_scripts": [
		{
			"matches": ["http://www.toonbook.me/*", "http://www.toonbook.me/*"],
			"js": ["jquery.js", "arrive.min.js", "EventEmitter.js", "content_script.js"],
			"css": ["toonbook_buddy.css"]
		}
	],
	
	"permissions": [
		"http://*.toonbook.me/*",
		"http://media.toonbook.me/*",
		"notifications"
	],
	
	"icons": {
		"48": "icon.png"
	},
	
	"background": {
		"scripts": ["jquery.js", "shared.js", "toonbookbuddy.js"],
		"persistent": false
	},
	
	"web_accessible_resources": [
		"icon16.png"
	]
}